.panel-body
  = form_for [:admin, @item] do |f|
    .input-group
      = f.label :title
      %br/
      = f.text_field :title, class: 'form-control'
    %br/
    .input-group
      = f.label :price
      %br/
      = f.text_field :price, class: 'form-control'
    %br/
    .input-group
      = f.label :description
      %br/
      = f.text_area :description, class: 'form-control'
    %br/
    .input-group
      = f.label :category
      %br/
      = f.select :category_id, categories_options(@item.category_id), {include_blank: true}, {class: "form-control"}
    %br/
    .input-group
      = f.submit class: 'btn btn-primary'
      = link_to "Destroy", admin_product_path(@item), method: :delete, class: 'btn btn-danger', data: { confirm: 'Are you sure?' }

= render "layouts/shared/validation_errors", item: @item