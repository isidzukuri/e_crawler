.panel-body
  = form_for @item do |f|
    .input-group
      = f.label :title
      %br/
      = f.text_field :title, class: 'form-control'
    %br/
    .input-group
      = f.label :parent
      %br/
      = f.select :parent_id, categories_options(@item.parent_id), {include_blank: true}, {class: "form-control"}
    %br/
    .input-group
      = f.submit class: 'btn btn-primary'

= render "layouts/shared/validation_errors", item: @item







